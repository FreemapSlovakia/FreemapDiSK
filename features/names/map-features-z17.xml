            }


            .natural-peak-cas {
            fill: #F2ECE2;
            stroke: #F2ECE2;
            stroke-width: 1.37143px;
            font-family: DejaVu Sans;
            font-size: 9.143px;
            font-weight: normal;
            text-anchor: middle;
            }

            .natural-peak-cor {
            fill: #B77F0F;
            stroke: #B77F0F;
