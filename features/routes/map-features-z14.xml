<?xml version='1.0' encoding='UTF-8'?>
<?xml-stylesheet type="text/xsl" href="osmarender.xsl"?>

<rules
    xmlns:xlink="http://www.w3.org/1999/xlink"
    xmlns:svg="http://www.w3.org/2000/svg"
    xmlns:sodipodi="http://sodipodi.sourceforge.net/DTD/sodipodi-0.dtd"
    xmlns:inkscape="http://www.inkscape.org/namespaces/inkscape"
    scale="1"
    svgBaseProfile="full"
    symbolScale="1"
    minimumMapWidth="1"
    minimumMapHeight="1"
    withOSMLayers="yes"
    textAttenuation="0.44"
    showScale="no"
    showGrid="no"
    showBorder="no"
    showLicense="no"
    interactive="no"
    processWays="yes">

    <!--data_mkr1-->
    <data file="data.osm" />
    <!--data_mkr2-->

    <!--bounds_mkr1-->
    <!--bounds_mkr2-->

    <rule e="node|way" k="osmarender:render" v="~|yes" layer="5">

        <layer name="trails" opacity="0.6">
            <rule e="way" k="name" v="*" layer="5">
                <!--<line class='trail' smart-linecap='no' />-->
            </rule>
        </layer>

        <rule e="node|way" k="osmarender:renderRef|osmarender:renderref" v="~|yes" layer="5">
            <rule e="way" k="name" v="*" layer="5">
                <text k="name_normalized" x-name-direction="normal" text-anchor='end' startOffset='80%' class="trail-ref2-cas" dy='2.85714px' x-label-scaling='no' text-postfix=" ‣"/>
                <text k="name_normalized" x-name-direction="normal" text-anchor='end' startOffset='80%' class="trail-ref-cas" dy='2.85714px' x-label-scaling='no' text-postfix=" ‣"/>
                <text k="name_normalized" x-name-direction="normal" text-anchor='end' startOffset='80%' class='trail-ref-cor' dy='2.85714px' x-label-scaling='no' text-postfix=" ‣"/>
            </rule>
        </rule>
    </rule>
    <!-- k="osmarender:render" v="~|yes" -->

    <!-- SVG Definitions - markers, symbols etc go here -->
    <defs>
        <svg:filter
		   inkscape:collect="always"
		   id="gauss7"
		   x="-0.030957849"
		   width="1.0619157"
		   y="-0.15485379"
		   height="1.3097076">
            <svg:feGaussianBlur
               inkscape:collect="always"
               stdDeviation="1.7"
               id="feGaussianBlur7" />
        </svg:filter>

        <svg:filter
           inkscape:collect="always"
           id="gauss5"
           x="-0.030957849"
           width="1.0619157"
           y="-0.15485379"
           height="1.3097076">
            <svg:feGaussianBlur
               inkscape:collect="always"
               stdDeviation="1.2"
               id="feGaussianBlur5" />
        </svg:filter>

        <svg:filter
           inkscape:collect="always"
           id="gauss3"
           x="-0.030957849"
           width="1.0619157"
           y="-0.15485379"
           height="1.3097076">
            <svg:feGaussianBlur
               inkscape:collect="always"
               stdDeviation="0.4"
               id="feGaussianBlur3" />
        </svg:filter>
        <style id="styles" type="text/css" xmlns="http://www.w3.org/2000/svg">
            <![CDATA[ 

      .trail-ref-cor {
      fill: #FFFFFF;
      font-family: DejaVu Sans;
      font-size: 9.143px;
      font-weight: normal;
      stroke: #FFFFFF;
      stroke-width: 0.19429px;
	  spacing:auto;
      method:stretch;
      }

      .trail-ref-cas {
      fill: #000000;
      font-family: DejaVu Sans;
      font-size: 9.143px;
      font-weight: normal;
      stroke: #000000;
      stroke-width: 2.28571px;
	  opacity: 0.9;
	  spacing:auto;
      method:stretch;
      filter:url(#gauss3);

      }
      
      .trail-ref2-cas {
      fill: #800000;
      font-family: DejaVu Sans;
      font-size: 9.143px;
      font-weight: normal;
      stroke: #800000;
      stroke-width: 2.97143px;
	  opacity: 0.7;
	  spacing:auto;
      method:stretch;
      filter:url(#gauss5);

      }
      /* trail- generic style */
      .trail {
      stroke-linecap: round;
      stroke-linejoin: round;
      fill: none;
      stroke: #AA00AA;
      stroke-width: 0.91429px;
	  stroke-dasharray: 1.82857,6.857;
      }
      

      /* Map decoration */
      .map-grid-line {
      fill: none;
      stroke: #8080ff;
      stroke-width: 0.11429px;
      stroke-opacity: 0.5;
      }

      .map-border-cas {
      fill: none;
      stroke: #8080ff;
      stroke-width: 3.429px;
      stroke-miterlimit: 4;
      stroke-dasharray: none;
      stroke-opacity: 1;
      stroke-linecap: round;
      }

      .map-border-cor {
      fill: none;
      fill-opacity: 1;
      fill-rule: nonzero;
      stroke: #ffffff;
      stroke-width: 2.28571px;
      stroke-miterlimit: 0;
      stroke-dashoffset: -0.57143px;
      stroke-opacity: 1;
      }

      .map-scale-cas {
      fill: none;
      stroke: #8080ff;
      stroke-width: 4.571px;
      stroke-linecap: butt;
      }

      .map-scale-cor {
      fill: none;
      stroke: #ffffff;
      stroke-width: 3.429px;
      stroke-linecap: butt;
      }

      .map-scale-bookend {
      fill: none;
      stroke: #8080ff;
      stroke-width: 1.14286px;
      stroke-linecap: butt;
      }

      .map-scale-caption {
      font-family: DejaVu Sans;
      font-size: 11.429px;
      fill: #8080ff;
      }

       /* map background must be the same for all zooms or else empty tile detection will fail */
      .map-background {
      fill: none;
      stroke: none;
      }

      .map-title {
      font-family: DejaVu Sans;
      font-size: 22.857px;
      text-anchor: middle;
      fill: black;
      }

      .map-title-background {
      fill: white;
      }

      .map-marginalia-background {
      fill: white;
      }

      .osmarender-mask-black{
      stroke: #000000;
      }

      .osmarender-mask-white{
      stroke: #FFFFFF;
      }

      .osmarender-no-marker-end{
      marker-end: none;
      }

      .osmarender-no-marker-start{
      marker-start: none;
      }

      .osmarender-stroke-linecap-butt{
      stroke-linecap: butt;
      }

      .osmarender-stroke-linecap-round{
      stroke-linecap: round;
      }

      .osmarender-stroke-linecap-square{
      stroke-linecap: square;
      }
      
      ]]>
        </style>

        <svg:symbol
		  id="symbol-marked_trail-map"
		  viewBox="0 0 10 10"
		  fill='none'
		  stroke-width='0.8px'
		  stroke='#000000'>
            <svg:path d="M 0,7 L 10,7 M 0,3 L 10,3 M 0,7 L 0,3 M 10,7 L 10,3 M 0,7 L 10,3" />
        </svg:symbol>

        <svg:symbol
		  id="symbol-marked_trail-stand"
		  viewBox="0 0 10 10"
		  fill='none'
		  stroke-width='0.8px'
		  stroke='#000000'>
            <svg:path d="M 0,7 L 10,7 M 0,3 L 10,3 M 0,7 L 0,3 M 10,7 L 10,3 M 0,7 L 10,3" />
        </svg:symbol>

        <svg:symbol
		  id="symbol-natural_spring"
		  viewBox="0 0 10 10" >
            <svg:path style="fill:#007eff;;stroke:#0080db;stroke-width:0.8;"
			d="M 9.9000001,5 A 4.9000001,4.9000001 0 1 1 0.099999905,5 A 4.9000001,4.9000001 0 1 1 9.9000001,5 z" />
        </svg:symbol>

        <svg:symbol
		  id="symbol-amenity_shelter"
		  viewBox="0 0 10 10" >
            <svg:g>
                <svg:path
					   d="M 2.5,3 L 2.5,9"
					   style="fill:none;fill-rule:evenodd;stroke:#000000;stroke-width:1.14286px;stroke-linecap:butt;stroke-linejoin:miter;stroke-opacity:1" />
                <svg:path
					   d="M 7.5,3 L 7.5,9"
					   style="fill:none;fill-rule:evenodd;stroke:#000000;stroke-width:1.14286px;stroke-linecap:butt;stroke-linejoin:miter;stroke-opacity:1" />
                <svg:path
					   d="M 5,1 L 2,3 L 8,3 L 5,1 z"
					   style="fill:#000000;fill-opacity:1;fill-rule:evenodd;stroke:#000000;stroke-width:1.25714;stroke-linecap:butt;stroke-linejoin:miter;stroke-opacity:1;stroke-miterlimit:4;stroke-dasharray:none" />
            </svg:g >
        </svg:symbol >
    </defs>

</rules>

