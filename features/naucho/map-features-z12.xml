<?xml version='1.0' encoding='UTF-8'?>
<?xml-stylesheet type="text/xsl" href="osmarender.xsl"?>

<!-- This file should be used with Osmarender 6 -->
<!-- This file implements a sub-set of the items described at http://wiki.openstreetmap.org/index.php/Map_Features -->

<!-- A scale of 0.1 will make fat roads on a small map, a scale of 5 will draw very thin roads on a large scale map -->
<!-- minimumMapWidth/Height is in kilometres -->
<!-- Set javaScript="no" if you want an svg file that contains no javascript.  This is so that you can upload it to Wikipedia etc -->
<rules
    xmlns:xlink="http://www.w3.org/1999/xlink"
    xmlns:svg="http://www.w3.org/2000/svg"
    scale="1"
    svgBaseProfile="full"
    symbolScale="1"
    minimumMapWidth="1"
    minimumMapHeight="1"
    withOSMLayers="yes"
    textAttenuation="0.44"
    withUntaggedSegments="no"
    showScale="no"
    showGrid="no"
    showBorder="no"
    showLicense="no"
    interactive="no"
    processWays="yes">

    <!--data_mkr1-->
    <data file="data.osm" />
    <!--data_mkr2-->

	<!--bounds_mkr1-->
	<!--bounds_mkr2-->

	<!-- Select all nodes and ways (unless they have an osmarender:render=no tag) -->
	<!-- If you really want to render segments then you will need to add segment to the element list, but please don't - tag the ways instead. -->
	<rule e="node|way" k="osmarender:render" v="~|yes"  layer="5">

		<!-- Paths not in tunnels -->

		<layer name="naucho" opacity="0.4"  layer="5">
			<rule e="way" k="tunnel" v="~|no"   layer="5">
				<rule e="way" k="fmrelhikingblue|fmrelhikingred|fmrelhikingyellow|fmrelhikinggreen" v="*" layer="5">
				    <rule e="way" k="fmreleducation" v="*" layer="5">
					   <line class='trail-cor-edu trail-plus'  smart-linecap='no'/>
					   <line class='trail-cor-2-edu trail-plus'  smart-linecap='no'/>
				    </rule>
                </rule>

				<else>
					<rule e="way" k="fmreleducation" v="*" layer="5"> 
						<line class='trail-cor-edu'  smart-linecap='no'/>
						<line class='trail-cor-2-edu'  smart-linecap='no'/>
					</rule>
				</else>
			</rule>
		</layer>
	</rule>
  <!-- k="osmarender:render" v="~|yes" -->

		<!-- SVG Definitions - markers, symbols etc go here -->
		<defs>
			<style id="styles" type="text/css" xmlns="http://www.w3.org/2000/svg">
				<![CDATA[ 

      
      .trail-ref {
      fill: #FFFFF0;
      font-family: DejaVu Sans,sans-serif;
      font-size: 9.143px;
      font-weight: normal;
      stroke: #FFFFF0;
      stroke-width: 0;
      }

      .trail-ref-cas {
      fill: #202020;
      font-family: DejaVu Sans,sans-serif;
      font-size: 9.143px;
      font-weight: normal;
      stroke: #202020;
      stroke-width: 2px;
      }
      
      /* trail- generic style */
      .trail-cas-edu {
      stroke-linecap: round;
      stroke-linejoin: round;
      fill: none;
      stroke: white;
      stroke-width: 5.143px;
      }
      
      .trail-cas-1-edu {
      stroke-linecap: round;
      stroke-linejoin: round;
      fill: none;
      stroke: #204020;
      stroke-width: 6.286px;
      }
      
       
      .trail-cor-edu {
      stroke-linecap: butt;
      stroke-linejoin: round;
      fill: none;
      stroke-width: 5.714px;
      stroke-dasharray: 8.571,8.571;
	  stroke-dashoffset: 0;
	  stroke: #208020;
	  }
      
      
      .trail-cor-2-edu {
      stroke-linecap: butt;
      stroke-linejoin: round;
      fill: none;
      stroke-width: 5.714px;
      stroke-dasharray: 8.571,8.571;
	  stroke-dashoffset: 8.571;
	  stroke: #B0F0B0;
	  }
      
      .trail-plus {
      stroke-width: 7.714px;
	  }

      /* Map decoration */
      .map-grid-line {
      fill: none;
      stroke: #8080ff;
      stroke-width: 0.02857px;
      stroke-opacity: 0.5;
      }

      .map-border-cas {
      fill: none;
      stroke: #8080ff;
      stroke-width: 0.85714px;
      stroke-miterlimit: 4;
      stroke-dasharray: none;
      stroke-opacity: 1;
      stroke-linecap: round;
      }

      .map-border-cor {
      fill: none;
      fill-opacity: 1;
      fill-rule: nonzero;
      stroke: #ffffff;
      stroke-width: 0.57143px;
      stroke-miterlimit: 0;
      stroke-dashoffset: -0.14286px;
      stroke-opacity: 1;
      }

      .map-scale-cas {
      fill: none;
      stroke: #8080ff;
      stroke-width: 1.14286px;
      stroke-linecap: butt;
      }

      .map-scale-cor {
      fill: none;
      stroke: #ffffff;
      stroke-width: 0.85714px;
      stroke-linecap: butt;
      }

      .map-scale-bookend {
      fill: none;
      stroke: #8080ff;
      stroke-width: 0.28571px;
      stroke-linecap: butt;
      }

      .map-scale-caption {
      font-family: DejaVu Sans,sans-serif;
      font-size: 2.85714px;
      fill: #8080ff;
      }

       /* map background must be the same for all zooms or else empty tile detection will fail */
      .map-background {
      fill: none;
      stroke: none;
      }

      .map-title {
      font-family: DejaVu Sans,sans-serif;
      font-size: 5.714px;
      text-anchor: middle;
      fill: black;
      }

      .map-title-background {
      fill: white;
      }

      .map-marginalia-background {
      fill: white;
      }

      .osmarender-mask-black{
      stroke: #000000;
      }

      .osmarender-mask-white{
      stroke: #FFFFFF;
      }

      .osmarender-no-marker-end{
      marker-end: none;
      }

      .osmarender-no-marker-start{
      marker-start: none;
      }

      .osmarender-stroke-linecap-butt{
      stroke-linecap: butt;
      }

      .osmarender-stroke-linecap-round{
      stroke-linecap: round;
      }

      .osmarender-stroke-linecap-square{
      stroke-linecap: square;
      }
      ]]>
			</style>


			<svg:symbol
			  id="symbol-marked_trail-map"
			  viewBox="0 0 10 10"
			  fill='none'
			  stroke-width='0.8px'
			  stroke='#000000'>
				<svg:path d="M 0,7 L 10,7 M 0,3 L 10,3 M 0,7 L 0,3 M 10,7 L 10,3 M 0,7 L 10,3" />
			</svg:symbol>

			<svg:symbol
			  id="symbol-marked_trail-stand"
			  viewBox="0 0 10 10"
			  fill='none'
			  stroke-width='0.8px'
			  stroke='#000000'>
				<svg:path d="M 0,7 L 10,7 M 0,3 L 10,3 M 0,7 L 0,3 M 10,7 L 10,3 M 0,7 L 10,3" />
			</svg:symbol>

		</defs>

	</rules>

